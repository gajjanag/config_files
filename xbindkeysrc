# increase volume
"ponymix increase 5"
    Shift + XF86AudioRaiseVolume

# decrease volume
"ponymix decrease 5"
    Shift + XF86AudioLowerVolume

# mute audio
"ponymix toggle"
    Shift + XF86AudioMute

# increase screen brightness
"xbacklight -inc 10"
    Shift + XF86MonBrightnessUp

# decrease screen brightness
"xbacklight -dec 10"
    Shift + XF86MonBrightnessDown
