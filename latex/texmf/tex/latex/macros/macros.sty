\ProvidesPackage{macros}
\RequirePackage{amsmath}
\RequirePackage{amsthm}
\RequirePackage{bbm}
\RequirePackage{mathtools}
\RequirePackage{array}   % for \newcolumntype macro

% standard sets
\newcommand{\F}{\mathbb{F}} % finite field
\newcommand{\R}{\mathbb{R}} % real numbers
\newcommand{\Sphere}{\mathbb{S}} % sphere
\newcommand{\Q}{\mathbb{Q}} % rational numbers
\newcommand{\Z}{\mathbb{Z}} % integers
\newcommand{\N}{\mathbb{N}} % nonnegative integers == natural numbers

% custom sets
\newcommand{\mA}{\mathcal{A}}
\newcommand{\mB}{\mathcal{B}}
\newcommand{\mC}{\mathcal{C}}
\newcommand{\mD}{\mathcal{D}}
\newcommand{\mJ}{\mathcal{J}}
\newcommand{\mP}{\mathcal{P}}
\newcommand{\mR}{\mathcal{R}}
\newcommand{\mS}{\mathcal{S}}
\newcommand{\mX}{\mathcal{X}}
\newcommand{\mY}{\mathcal{Y}}

% random variables
\newcommand{\rX}{\mathbf{x}}
\newcommand{\rY}{\mathbf{y}}

% special stuff
\DeclareMathOperator{\Hom}{Hom} % the set of homomorphisms between objects
\DeclareMathOperator{\End}{End} % the set of endomorphisms of an object
\let\bademptyset\emptyset
\renewcommand{\emptyset}{\varnothing} % empty set
\newcommand{\dunion}{\mathop{\dot{\cup}}} % disjoint union
\newcommand\indep{\protect\mathpalette{\protect\indepT}{\perp}} % independence
\def\indepT#1#2{\mathrel{\rlap{$#1#2$}\mkern2mu{#1#2}}}
% \newcommand{\notindep}{\centernot{\indep}} % not independent, requires centernot
% align* but number selectively
\newcommand\numberthis{\addtocounter{equation}{1}\tag{\theequation}}

\newcolumntype{L}{>{$}l<{$}} % math-mode version of "l" column type
\newcolumntype{C}{>{$}c<{$}} % math-mode version of "c" column type
\newcolumntype{R}{>{$}r<{$}} % math-mode version of "r" column type

% Operators
\DeclarePairedDelimiterX{\ip}[2]{\langle}{\rangle}{#1, #2} % \ip{a}{b}=<a,b>
\DeclareMathOperator{\Rank}{rank} % rank of a subspace
\DeclareMathOperator{\Span}{span} % span of a set of vectors
\DeclareMathOperator*{\union}{\bigcup}
\DeclareMathOperator*{\intersect}{\bigcap}
\DeclareMathOperator*{\E}{\mathbb{E}} % expectation
\DeclareMathOperator*{\I}{\mathbbm{1}} % indicator function
\newcommand{\interior}[1]{%
  {\kern0pt#1}^{\mathrm{o}}%
} % set interior

% Environments
\newtheorem{thm}{Theorem}
\newtheorem{propn}{Proposition}
\newtheorem{conj}{Conjecture}
\newtheorem{defn}{Definition}
\newtheorem{lemma}{Lemma}
\newtheorem{remark}{Remark}
\newtheorem{corollary}{Corollary}
